@model my_mvc.Models.Class1
@{
    ViewBag.Title = "myform";
}






<h2>myform</h2>
@using (Html.BeginForm("myform", "Home", FormMethod.Post))
{


    @Html.HiddenFor(m => m.id);
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Forms</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Basic Form Elements
                        </div>
                        <div>


                            @if (ViewBag.id == null)
                            {
                                <h2>Addstudent:-</h2>

                            }
                            else
                            {
                                <h2>editstudent:-</h2>

                            }




                            <div class="form-group">
                                <label>name</label>
                                @Html.TextBoxFor(m => m.name, new { @class = "form-control", @Type = "text", @placeholder = "name", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>email</label>
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @Type = "email", @placeholder = "enter the email", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>city</label>
                                @Html.TextBoxFor(m => m.city, new { @class = "form-control", @Type = "text", @placeholder = " enter the city name ", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>college</label>
                                @Html.TextBoxFor(m => m.college, new { @class = "form-control", @Type = "text", @placeholder = " enter the college name", @required = "required" })
                            </div>
                            <button class="btn btn-success" type="submit">submit</button>
                            <button type="reset" class="btn btn-danger">re-reset</button>

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
}

