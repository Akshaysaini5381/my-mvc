@model List<my_mvc.Models.Class1>
@{
    ViewBag.Title = "mytable";
}

<h2>mytable</h2>

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Tables</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DataTables Advanced Tables
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>name</th>
                                        <th>email</th>
                                        <th>city</th>
                                        <th>college</th>
                                        <th>edit</th>
                                        <th>delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@item.id</td>
                                            <td>@item.name</td>
                                            <td>@item.email</td>
                                            <td>@item.city</td>
                                            <td>@item.college</td>
                                            <td><a href="@Url.Action("edit","Home",new {item.id })"> <i class="fa fa-edit"></i> edit</a></td>
                                            <td><a href="@Url.Action("delete","Home",new {item.id })"><i class="fa fa-trash"></i>delete</a></td>
                                        </tr>
                                    }




                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
    <!-- /.container-fluid -->
</div>

<script src="~/Scripts/js/jquery.min.js"></script>


<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });</script>
